<div class="container">
  <div class="card mt-5">
    <div class="card-header">
      <h2><%= @list.name %></h2>
    </div>
    <div class="card-body">
      <ul class="list-group">
        <% @list.bookmarks.each do |bookmark| %>
          <li class="list-group-item">
            <p><%= bookmark.comment %> <span class="badge bg-dark"><%= bookmark.movie.title %></span></p>
          </li>
        <% end %>
      </ul>
      <div class="mt-3">
        <%= link_to "Return to Lists", root_path, class: "btn btn_outline_dark" %>
        <%= link_to "Create a New Bookmark", new_list_bookmark_path(@list), class: "btn btn_outline_dark" %>
      </div>
    </div>
  </div>
</div>
